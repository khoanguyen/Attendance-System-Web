@model AttendanceSystem.Models.LogicModel.ClassLogicModel

@section scripts{
   <script type="text/javascript" src="~/Scripts/course-scripts.js"></script>
}

@section BodySection{
<div class="panel panel-primary">
    <div class="panel-heading">
        <strong>@Model.Name</strong> by @Model.ProfessorName :: @Model.StartDate.ToShortDateString() to @Model.EndDate.ToShortDateString() ::
    </div>
    <div class="panel-body">
        <div class="row">
            <div class="col-md-12">
                <button type="button" class="btn btn-info">View attendance history</button>
                <button type="button" class="btn btn-default" onclick="javascript:deleteClass(@Model.Id)">Delete class</button>
            </div>
        </div>
        <h3>Class information</h3>
        <div class="row">
            <div class="col-md-6">
                <form>
                    <div class="form-group">
                        <label>Class name</label>
                        @Html.TextBoxFor(i => i.Name, new { @class="form-control", @placeholder="Class name"})
                        
                    </div>
                    <div class="form-group">
                        <label>Professor name</label>
                        @Html.TextBoxFor(i => i.ProfessorName, new { @class = "form-control", @placeholder = "Professor name" })
                    </div>
                    <div class="form-group">
                        <label for="exampleInputFile">Start date</label>
                        @Html.TextBoxFor(i => i.StartDate, new { @class = "form-control", @placeholder = "mm/dd/yyyy", @type="date" })
                        <p class="help-block">Enter start date</p>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputFile">End date</label>
                        @Html.TextBoxFor(i => i.EndDate, new { @type = "date", @class = "form-control", @placeholder = "mm/dd/yyyy" })
                        <p class="help-block">Enter end date</p>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputFile">Excused time</label>
                        @Html.TextBoxFor(i => i.ExcusedTime, new { @class = "form-control", @placeholder = "hh:mm:ss" })
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <h3>Class Sessions</h3>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <table class="table">
                    <thead class="bg-info">
                        <tr>
                            <th>Start time</th>
                            <th>End time</th>
                            <th>Weekday</th>
                            <th>Room</th>
                            <th>Command</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var s in Model.Sessions)
                        {
                            <tr id="session-@s.Id">
                                <td>
                                    <span>@s.StartTime</span>
                                    <input type="time" class="form-control hidden" placeholder="Start time" value="@s.StartTime" />
                                </td>
                                <td>
                                    <span>@s.EndTime</span>
                                    <input type="time" class="form-control hidden" placeholder="Start time" value="@s.EndTime" />
                                </td>
                                <td>
                                    <span>@s.Weekday</span>
                                    <input type="text" class="form-control hidden" placeholder="Weekday" value="@s.Weekday" />
                                </td>
                                <td>
                                    <span>@s.Room</span>
                                    <input type="text" class="form-control hidden" placeholder="Room" value="@s.Room" />
                                </td>
                                <td>
                                    <button type="button" class="btn btn-default" aria-label="Edit" name="btnEdit" onclick="enableDisableEditMode('session-@s.Id', true)">
                                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                                    </button>
                                    <button type="button" class="btn btn-default hidden" aria-label="Save" name="btnSave">
                                        <span class="glyphicon glyphicon-save" aria-hidden="true"></span>
                                    </button>
                                    <button type="button" class="btn btn-default" aria-label="Delete" name="btnDelete" onclick="deleteSession(@s.Id)">
                                        <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                                    </button>
                                    <button type="button" class="btn btn-default hidden" aria-label="Cancel" name="btnCancel" onclick="enableDisableEditMode('session-@s.Id', false)">
                                        <span class="glyphicon glyphicon-remove" hidden aria-hidden="true"></span>
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    
    
</div>
}