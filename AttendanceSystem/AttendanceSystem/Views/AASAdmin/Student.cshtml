@model AttendanceSystem.Models.LogicModel.StudentLogicModel

@section BodySection{
<div class="panel panel-primary">
    <div class="panel-heading">
        <strong>Add new student</strong>
    </div>
    <div class="panel-body">
        <div class="row">
            <div class="col-md-12"><a href="~/aasadmin/students" class="btn btn-default">Back to [Students]</a></div>
        </div>
        <h3>Student information</h3>
        <div class="row">
            <div class="col-md-6">
                @using (Html.BeginForm("student", "aasadmin", FormMethod.Post))
                {
                    <div class="form-group">
                        <label>Student name</label>
                        @Html.TextBoxFor(i => i.DisplayName, new { @class = "form-control", @placeholder = "Display name" })
                    </div>
                    <div class="form-group">
                        <label>Email address[used as login name]</label>
                        @Html.TextBoxFor(i => i.Email, new { @class = "form-control", @placeholder = "someone@domain.com", @type = "email" })
                    </div>
                    <div class="form-group">
                        <label>Password</label>
                        @Html.TextBoxFor(i => i.Password, new { @class = "form-control", @placeholder = "Password", @type = "password" })
                    </div>
                    <div class="form-group">
                        <label>Confirm password</label>
                        @Html.TextBoxFor(i => i.ConfirmPassword, new { @class = "form-control", @placeholder = "Confirm password", @type = "password" })
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                    <button type="reset" class="btn btn-default">Reset</button>
                }

            </div>
            <div class="col-md-6">
                @if (ViewBag.Error != null)
                {
                    <div class="alert alert-warning" role="alertdialog">
                        <strong>Error on save: </strong><span>@ViewBag.Error</span>
                    </div>
                }
            </div>
        </div>
    </div>    
</div>
}
